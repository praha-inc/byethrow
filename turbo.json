{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "generate": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "docs/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "generate"
      ],
      "outputs": [
        "dist/**",
        "doc_build/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint:code": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint:type": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
